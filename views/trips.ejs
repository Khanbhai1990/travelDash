<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h3><%=user.username%></h3>
    <form action="/trips" method="post">
      <input type="text" name="title" placeholder="title">
      <input type="text" name="description" placeholder="description">
        <select name="flight_id">
          <%for (let i=0;i<flight.length;i++){%>
          <option value='<%=flight[i].id%>'><%=flight[i].start%> to <%=flight[i].destination%></option>


          <%}%>
        </select>
          <br><br>
    <input type="submit">
    </form>

    <table >

        <thead>
          <tr>
          <th>title</th>
          <th>description</th>
          <th>start</th>
          <th>end</th>
          <th>flight</th>

        </tr>
        </thead>

        <tbody>
          <%for (let i=0;i<trip.length;i++){%>
          <tr >
            <td><%=trip[i].title%></td>
            <td><%=trip[i].description%></td>
            <td><%=trip[i].start%></td>
            <td><%=trip[i].destination%></td>
            <td><%=trip[i].name%></td>
          </tr>
            <%}%>
        </tbody>

      </table>

  </body>
</html>
